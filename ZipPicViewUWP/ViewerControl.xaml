<UserControl
    x:Class="ZipPicViewUWP.ViewerControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ZipPicViewUWP"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="600"
    d:DesignWidth="800">
  
    <Grid>
        <Button x:Name="NextButton" HorizontalAlignment="Right" Margin="0,0,10,0" VerticalAlignment="Center" 
            Height="100" Background="{StaticResource FloatControlBackground}">
            
            <SymbolIcon Symbol="Next" />
        </Button>

        <Button x:Name="PreviousButton" HorizontalAlignment="Left" Margin="10" VerticalAlignment="Center" Height="100" 
            Background="{StaticResource FloatControlBackground}">
            
            <SymbolIcon Symbol="Previous" />
        </Button>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" MinHeight="50"  Margin="10" VerticalAlignment="Bottom" 
            Background="{StaticResource FloatControlBackground}">
            
            <TextBlock x:Name="FilenameTextBlock" Width="400" 
                VerticalAlignment="Center" Margin="10" Text="&lt;&lt;filename&gt;&gt;" TextAlignment="Right" />
            
            <TextBlock x:Name="OriginalDimension" Width="100" 
                VerticalAlignment="Center" Margin="10">(dimension)</TextBlock>

            <Button Name="CopyButton" VerticalAlignment="Stretch">
                <SymbolIcon Symbol="Paste" />
            </Button>

            <Button Name="SaveButton" VerticalAlignment="Stretch">
                <SymbolIcon Symbol="Save" />
            </Button>

            <Button Name="PrintButton" VerticalAlignment="Stretch">
                <SymbolIcon Symbol="Print"/>
            </Button>

            <ToggleButton Name="AutoButton" VerticalAlignment="Stretch" Checked="AutoButton_Checked" Unchecked="AutoButton_Unchecked" >
                <SymbolIcon Symbol="Play"/>
            </ToggleButton>

            <Button Name="AutoDurationButton" Content="&#8711;" VerticalAlignment="Stretch">
                <Button.Flyout>
                    <Flyout>
                        <Grid Height="366" VerticalAlignment="Top">
                            <ToggleSwitch x:Name="PrecountToggle" Header="Pre-count" VerticalAlignment="Top"/>
                            <ListBox x:Name="DurationList" VerticalAlignment="Top" Margin="0,60,0,0" >
                                <ListBoxItem Content="5 seconds" IsSelected="True"/>
                                <ListBoxItem Content="10 seconds"/>
                                <ListBoxItem Content="15 seconds"/>
                                <ListBoxItem Content="30 seconds"/>
                            </ListBox>
                        </Grid>

                    </Flyout>
                </Button.Flyout>
            </Button>
        </StackPanel>

        <Button x:Name="CloseButton" Width="50" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top" 
            Margin="10" Background="{StaticResource FloatControlBackground}">
            <SymbolIcon Symbol="Cancel"/>
        </Button>

    </Grid>
</UserControl>
